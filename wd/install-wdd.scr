### startup.rc ###
ed -s /etc/startup.rc << "EOF"
1
g/\/sbin\/wdd/d
$a
/bin/nice -n 10 /sbin/wdd
.
wq
EOF

echo "###### modif config.rc #######"

### config.rc ###
ed -s /etc/config.rc << "EOF"
1
/^\(service\|section\)[ 	]*system/
kb
